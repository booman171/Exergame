<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/widget_frame">
    
    <!-- Manually specifying text size/color/padding is ugly, would rather use default for preferences titles but don't see a way. -->
    <TextView android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:gravity="left|center" android:text="Select Background..." android:paddingLeft="2mm"
    android:textSize="22sp" android:textColor="#FFFF"
    android:id="@+id/title" android:layout_weight="4" />

	<ImageView android:layout_width="15mm" android:layout_height="13mm" android:paddingRight="2mm"
		android:id="@+id/prefs_image_view" android:scaleType="centerInside" android:layout_weight="1" />

</LinearLayout>